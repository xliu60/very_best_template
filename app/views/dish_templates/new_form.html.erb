<h1>
  Add a new dish
</h1>


<hr>

<!-- Form dish start -->
<form action="/create_dish" method="post">
<!-- Form dish end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for cuisine_id start -->
  <div class="form-group">
    <label for="cuisine_id">
      Cuisine
    </label>

    <!-- Input for cuisine_id start -->
    <input type="text" id="cuisine_id" name="cuisine_id" class="form-control">
    <!-- Input for cuisine_id end -->
  </div>
  <!-- Label and input for cuisine_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create dish
  </button>
</form>

<hr>

<a href="/dishes">
  Go back
</a>
