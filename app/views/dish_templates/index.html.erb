<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All dishes
    </h1>

    <a href="/dishes/new" class="btn btn-block btn-outline-secondary">
      Add a new dish
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Cuisine
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @dishes.each do |dish| %>
      <tr>
        <!-- Display dish.id start -->
        <td>
          <%= dish.id %>
        </td>
        <!-- Display dish.id end -->

        <!-- Display dish.name start -->
        <td>
          <%= dish.name %>
        </td>
        <!-- Display dish.name end -->

        <!-- Display dish.cuisine_id start -->
        <td>
          <%= dish.cuisine.name %>
        </td>
        <!-- Display dish.cuisine_id end -->

        <!-- Display dish.created_at start -->
        <td>
          <%= time_ago_in_words(dish.created_at) %> ago
        </td>
        <!-- Display dish.created_at end -->

        <!-- Display dish.updated_at start -->
        <td>
          <%= time_ago_in_words(dish.updated_at) %> ago
        </td>
        <!-- Display dish.updated_at end -->

        <td>
          <a href="/dishes/<%= dish.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
