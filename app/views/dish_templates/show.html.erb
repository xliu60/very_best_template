<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Dish #<%= @dish.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/dishes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link dish start -->
      <div class="col">
        <a href="/dishes/<%= @dish.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit dish
        </a>
      </div>
      <!-- Edit link dish end -->

      <!-- Delete link dish start -->
      <div class="col">
        <a href="/delete_dish/<%= @dish.id %>" class="btn btn-block btn-outline-secondary">
          Delete dish
        </a>
      </div>
      <!-- Delete link dish end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @dish.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Cuisine
      </dt>
      <!-- Display cuisine_id start -->
      <dd>
        <% if @dish.cuisine.present? %>
          <a href="/cuisines/<%= @dish.cuisine_id %>">
            <%= @dish.cuisine.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display cuisine_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@dish.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@dish.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "dish_templates/dish_bookmarks" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "dish_templates/dish_fans" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "dish_templates/dish_specialists" %>
  </div>
</div>
<!-- Show Page Customization end -->
