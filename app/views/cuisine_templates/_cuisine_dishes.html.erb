<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Dishes

    <a data-toggle="collapse" href="#cuisine_dishes_new_form">
      Add dish
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @cuisine.dishes.each do |dish| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/dishes/<%= dish.id %>">
          <%= dish.name %>
        </a>

        <a href="/delete_dish_from_cuisine/<%= dish.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="cuisine_dishes_new_form">
        <%= render partial: "cuisine_templates/cuisine_dishes_new_form" %>
      </div>
    </div>

  </ul>
</div>
