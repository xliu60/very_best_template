<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Venue #<%= @venue.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/venues" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link venue start -->
      <div class="col">
        <a href="/venues/<%= @venue.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit venue
        </a>
      </div>
      <!-- Edit link venue end -->

      <!-- Delete link venue start -->
      <div class="col">
        <a href="/delete_venue/<%= @venue.id %>" class="btn btn-block btn-outline-secondary">
          Delete venue
        </a>
      </div>
      <!-- Delete link venue end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @venue.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Address
      </dt>
      <!-- Display address start -->
      <dd>
        <%= @venue.address %>
      </dd>
      <!-- Display address end -->

      <dt>
        Neighborhood
      </dt>
      <!-- Display neighborhood_id start -->
      <dd>
        <%= @venue.neighborhood_id %>
      </dd>
      <!-- Display neighborhood_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@venue.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@venue.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

