<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All venues
    </h1>

    <a href="/venues/new" class="btn btn-block btn-outline-secondary">
      Add a new venue
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "venue_templates/venues_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "venue_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Neighborhood
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @venues.each do |venue| %>
      <tr>
        <td>
          <%= venue.id %>
        </td>

        <td>
          <%= venue.name %>
        </td>

        <td>
          <%= venue.address %>
        </td>

        <td>
          <% if venue.neighborhood.present? %>
            <a href="/neighborhoods/<%= venue.neighborhood.id %>">
              <%= venue.neighborhood.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(venue.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(venue.updated_at) %> ago
        </td>

        <td>
          <a href="/venues/<%= venue.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @venues, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
