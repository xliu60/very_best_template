<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All venues
    </h1>

    <a href="/venues/new" class="btn btn-block btn-outline-secondary">
      Add a new venue
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "venue_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Neighborhood
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @venues.each do |venue| %>
      <tr>
        <!-- Display venue.id start -->
        <td>
          <%= venue.id %>
        </td>
        <!-- Display venue.id end -->

        <!-- Display venue.name start -->
        <td>
          <%= venue.name %>
        </td>
        <!-- Display venue.name end -->

        <!-- Display venue.address start -->
        <td>
          <%= venue.address %>
        </td>
        <!-- Display venue.address end -->

        <!-- Display venue.neighborhood_id start -->
        <td>
          <%= venue.neighborhood.name %>
        </td>
        <!-- Display venue.neighborhood_id end -->

        <!-- Display venue.created_at start -->
        <td>
          <%= time_ago_in_words(venue.created_at) %> ago
        </td>
        <!-- Display venue.created_at end -->

        <!-- Display venue.updated_at start -->
        <td>
          <%= time_ago_in_words(venue.updated_at) %> ago
        </td>
        <!-- Display venue.updated_at end -->

        <td>
          <a href="/venues/<%= venue.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
