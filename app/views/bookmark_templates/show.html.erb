<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bookmark #<%= @bookmark.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/bookmarks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @bookmark.user %>
          <a href="/bookmarks/<%= @bookmark.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit bookmark
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @bookmark.user %>
          <a href="/delete_bookmark/<%= @bookmark.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete bookmark
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Dish
      </dt>
      <dd>
        <% if @bookmark.dish.present? %>
          <a href="/dishes/<%= @bookmark.dish_id %>">
            <%= @bookmark.dish.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Venue
      </dt>
      <dd>
        <% if @bookmark.venue.present? %>
          <a href="/venues/<%= @bookmark.venue_id %>">
            <%= @bookmark.venue.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @bookmark.user.present? %>
          <a href="/users/<%= @bookmark.user_id %>">
            <%= @bookmark.user.username %>
          </a>
        <% end %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @bookmark.notes %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @bookmark.image %>" class="img-fluid">
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@bookmark.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@bookmark.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

