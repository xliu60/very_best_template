<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bookmarks
    </h1>

    <a href="/bookmarks/new" class="btn btn-block btn-outline-secondary">
      Add a new bookmark
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "bookmark_templates/bookmarks_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Dish
        </th>

        <th>
          Venue
        </th>

        <th>
          User
        </th>

        <th>
          Notes
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td>
          <%= bookmark.id %>
        </td>

        <td>
          <% if bookmark.dish.present? %>
            <a href="/dishes/<%= bookmark.dish.id %>">
              <%= bookmark.dish.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if bookmark.venue.present? %>
            <a href="/venues/<%= bookmark.venue.id %>">
              <%= bookmark.venue.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if bookmark.user.present? %>
            <a href="/users/<%= bookmark.user.id %>">
              <%= bookmark.user.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= bookmark.notes %>
        </td>

        <td>
          <img src='<%= bookmark.image %>' class='img-fluid'>
        </td>

        <td>
          <%= time_ago_in_words(bookmark.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarks/<%= bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @bookmarks, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
