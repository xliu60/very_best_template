<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Neighborhood #<%= @neighborhood.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/neighborhoods" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/neighborhoods/<%= @neighborhood.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit neighborhood
        </a>
      </div>

      <div class="col">
        <a href="/delete_neighborhood/<%= @neighborhood.id %>" class="btn btn-block btn-outline-secondary">
          Delete neighborhood
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @neighborhood.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@neighborhood.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@neighborhood.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "neighborhood_templates/neighborhood_venues" %>
  </div>
</div>
