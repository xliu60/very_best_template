<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All neighborhoods
    </h1>

    <a href="/neighborhoods/new" class="btn btn-block btn-outline-secondary">
      Add a new neighborhood
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <!-- Display neighborhood.id start -->
        <td>
          <%= neighborhood.id %>
        </td>
        <!-- Display neighborhood.id end -->

        <!-- Display neighborhood.name start -->
        <td>
          <%= neighborhood.name %>
        </td>
        <!-- Display neighborhood.name end -->

        <!-- Display neighborhood.created_at start -->
        <td>
          <%= time_ago_in_words(neighborhood.created_at) %> ago
        </td>
        <!-- Display neighborhood.created_at end -->

        <!-- Display neighborhood.updated_at start -->
        <td>
          <%= time_ago_in_words(neighborhood.updated_at) %> ago
        </td>
        <!-- Display neighborhood.updated_at end -->

        <td>
          <a href="/neighborhoods/<%= neighborhood.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
