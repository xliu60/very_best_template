<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All neighborhoods
    </h1>

    <a href="/neighborhoods/new" class="btn btn-block btn-outline-secondary">
      Add a new neighborhood
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "neighborhood_templates/neighborhoods_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <td>
          <%= neighborhood.id %>
        </td>

        <td>
          <%= neighborhood.name %>
        </td>

        <td>
          <%= time_ago_in_words(neighborhood.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(neighborhood.updated_at) %> ago
        </td>

        <td>
          <a href="/neighborhoods/<%= neighborhood.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @neighborhoods, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
